<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ai_background">

    <ImageView
        android:id="@+id/ai_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ai_1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/ai_analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ai_analysis"
        android:layout_below="@id/ai_icon" />

    <ImageView
        android:id="@+id/ai_analysis_notibox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ai_noti_box"
        android:layout_below="@id/ai_analysis" />

    <ImageView
        android:id="@+id/ai_analysis_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ai_noti"
        android:layout_below="@id/ai_analysis"/>

    <ImageView
        android:id="@+id/ai_des_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ai_des_1"
        android:layout_below="@id/ai_analysis_noti"/>

    <ImageView
        android:id="@+id/ai_des_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ai_des_2"
        android:layout_below="@id/ai_des_1"/>

    <ImageView
        android:id="@+id/ai_des_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ai_des_3"
        android:layout_below="@id/ai_des_2"/>

    <ImageView
        android:id="@+id/ai_des_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ai_des_4"
        android:layout_below="@id/ai_des_3"/>


</RelativeLayout>